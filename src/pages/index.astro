---
import Layout from "@/layouts/Layout.astro";
import { toKebabCase, toTitleCase } from "@/utils/tool-names";

const toolModules = import.meta.glob("../tools/*.tsx");

const tools = Object.keys(toolModules).map((path) => {
  const fileName = path.split("/").pop()?.replace(".tsx", "") || "";
  return {
    href: `/${toKebabCase(fileName)}`,
    title: toTitleCase(fileName),
  };
});
---

<Layout>
	<div class="min-h-screen bg-background p-8">
		<div class="mx-auto max-w-3xl">
			<h1 class="text-4xl font-bold text-foreground mb-2">Tools</h1>
			<p class="text-muted-foreground mb-8">A collection of tools</p>

			<ul class="list-none p-0 space-y-4">
			{tools.map(tool => (
			<li>
			<a
			 href={tool.href}
			  class="block p-4 bg-muted rounded-lg no-underline text-primary transition-colors hover:bg-muted/80"
			>
			  {tool.title}
			  </a>
			 </li>
			))}
			</ul>
		</div>
	</div>
</Layout>
